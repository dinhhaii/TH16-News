<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="section-heading">
                <br>
                <h4>Quản lý bài viết đang chờ duyệt</h4>
                <div class="line"></div>
            </div>
        </div>
    </div>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr class="info">
                <th scope="col">ID bài viết</th>
                <th scope="col">Tên bài viết</th>
                <th scope="col">Chuyên mục</th>
                <th scope="col">Nội dung</th>
                <th scope="col">Ngày khởi tạo</th>
                <th scope="col">Trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-light">
            {{#each unapprovedpost}}
            <tr>
                <th>{{this.id}}</th>
                <td>{{name}}</td>
                <td>{{category}}</td>
                <td>{{content}}</td>
                <td>{{createddate}}</td>
                <td>Đang chờ duyệt</td>
                <td>
                    <a role="button" href="/writer/editwriter/{{this.id}}" style="width: 100px;" class="btn btn-success">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>