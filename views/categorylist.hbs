{{>breadcrumb}}
<div class="vizew-bongda-list-posts-area mb-80">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <!-- Archive Catagory & View Options -->
                <div class="bongda-catagory-view mb-50 d-flex align-items-center justify-content-between">
                    <!-- Catagory -->
                    <div class="bongda-catagory">
                        <h4><i class="fa fa-list" aria-hidden="true"></i> {{title}} </h4>
                    </div>
                    <!-- View Options -->
                    <div class="view-options">
                        <a href="#" class="active"><i class="fa fa-list-ul" aria-hidden="true"></i></a>
                    </div>
                </div>

                {{#each this.posts}}
                <!-- Single Post Area -->
                <div class="single-post-area style-2">
                    <div class="row align-items-center">
                        <div class="col-12 col-md-6">
                            <!-- Post Thumbnail -->
                            <div class="post-thumbnail">
                                <img src="{{image}}" alt="">

                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <!-- Post Content -->
                            <div class="post-content mt-0">
                                <a href="category/{{idcategory}}/products" class="post-cata cata-sm cata-success">{{title}}</a>
                                <a href="#" class="post-title mb-2">{{titlepost}}</a>
                                <div class="post-meta d-flex align-items-center mb-2">
                                    <a href="#" class="post-author">By Hai</a>
                                    <i class="fa fa-circle" aria-hidden="true"></i>
                                    <a href="#" class="post-date">19/4/2019</a>
                                </div>
                                <p class="mb-2">VFF lạc quan về việc Philippines sẽ điều chỉnh phân nhóm hạt giống bóng
                                    đá nam SEA Games.</p>
                                <div class="post-meta d-flex">
                                    <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> 32</a>
                                    <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> 42</a>
                                    <a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 7</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

                
                <!-- Pagination -->
                <nav class="mt-50">
                    <ul class="pagination justify-content-center">
                        <li class="page-item"><a class="page-link" href="?page=1"><i class="fa fa-angle-left"></i></a></li>
                        {{#each this.pages}}
                        {{#if active}}
                        <li class="page-item active"><a class="page-link" href="#">{{value}}</a></li>
                        {{else}}
                        <li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
                        {{/if}}
                        {{/each}}
                        <li class="page-item"><a class="page-link" href="?page={{this.pages.length}}"><i class="fa fa-angle-right"></i></a></li>
                    </ul>
                </nav>
            </div>

            <div class="col-12 col-md-6 col-lg-4">
