{{>breadcrumb}}

<div class="vizew-bongda-list-posts-area mb-80">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <!-- Archive Catagory & View Options -->
                <div class="bongda-catagory-view mb-50 d-flex align-items-center justify-content-between">
                    <!-- Catagory -->
                    <div class="bongda-catagory">
                        <a href="/category/{{idcategory}}/posts" class="post-cata cata-sm cata-success">{{title}}</a>
                    </div>
                    <!-- View Options -->
                    <div class="view-options">
                        <a href="#" class="active"><i class="fa fa-list-ul" aria-hidden="true"></i></a>
                    </div>
                </div>

                {{#each posts}}
                <!-- Single Post Area -->
                <div class="single-post-area style-2">
                    <div class="row align-items-center">
                        <div class="col-12 col-md-6">
                            <!-- Post Thumbnail -->
                            <div class="post-thumbnail">
                                <img src="{{image}}" alt="">

                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <!-- Post Content -->
                            <div class="post-content mt-0">
                                <a href="/post/{{id}}" class="post-title mb-2">{{titlepost}}</a>
                                {{#if ispremium}}
                                <span class="badge badge-warning" style="display: inline">Premium</span><br>
                                {{/if}}
                                <div class="post-meta d-flex align-items-center mb-2">
                                    <a href="#" class="post-author">Bởi {{namewriter}}</a>
                                    <i class="fa fa-circle" aria-hidden="true"></i>
                                    <a href="#" class="post-date">{{publishdate}}</a>
                                </div>
                                {{{summary}}}
                                <div>
                                    <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> {{viewscomment}}</a>
                                    <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> {{views}}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                
                <!-- Pagination -->
                <nav class="mt-50">
                    <ul class="pagination justify-content-center">
                        <li class="page-item"><a class="page-link" href="?page=1"><i class="fa fa-angle-left"></i></a></li>
                        {{#each this.pages}}
                        {{#if active}}
                        <li class="page-item active"><a class="page-link" href="#">{{value}}</a></li>
                        {{else}}
                        <li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
                        {{/if}}
                        {{/each}}
                        <li class="page-item"><a class="page-link" href="?page={{this.pages.length}}"><i class="fa fa-angle-right"></i></a></li>
                    </ul>
                </nav>
            </div>

            <div class="col-12 col-md-6 col-lg-4">
                <div class="sidebar-area">

                    <!-- ***** Single Widget ***** -->
                    <div class="single-widget followers-widget mb-50">
                        <a href="#" class="facebook"><i class="fa fa-facebook" aria-hidden="true"></i><span
                                class="counter">198</span><span>Fan</span></a>
                        <a href="#" class="twitter"><i class="fa fa-twitter" aria-hidden="true"></i><span
                                class="counter">220</span><span>Followers</span></a>
                        <a href="#" class="google"><i class="fa fa-google" aria-hidden="true"></i><span
                                class="counter">140</span><span>Subscribe</span></a>
                    </div>

                    <!-- ***** Single Widget ***** -->
                    <div class="single-widget newsletter-widget mb-50">
                        <!-- Section Heading -->
                        <div class="section-heading style-2 mb-30">
                            <h4>Newsletter</h4>
                            <div class="line"></div>
                        </div>
                        <p>Nhấn Subscribe để ủng hộ chúng tôi và nhận tin tức bổ ích mới nhất!!</p>
                        <!-- Newsletter Form -->
                        <div class="newsletter-form">
                            <form action="#" method="post">
                                <input type="email" name="nl-email" class="form-control mb-15" id="emailnl"
                                    placeholder="Enter your email">
                                <button type="submit" class="btn vizew-btn w-100">Subscribe</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>