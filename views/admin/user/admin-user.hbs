<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="section-heading">
                <br>
                <h4>Quản lý người dùng</h4>
                <div class="line"></div>
            </div>
        </div>
    </div>

    <div style="text-align: right; margin-bottom: 20px;">
        <a href="/admin/insertuser"><button type="button" style="width: 200px;"
                class="btn btn-success">Thêm</button></a>
    </div>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr class="info">
                <th scope="col">ID</th>
                <th scope="col">Họ tên</th>
                <th scope="col">Tài khoản</th>
                <th scope="col">Mật khẩu</th>
                <th scope="col">Email</th>
                <th scope="col">SĐT</th>
                <th scope="col">Vị trí</th>
                <th scope="col">Ngày khởi tạo</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-light">
            {{#each user}}
            <tr>
                <th>{{this.id}}</th>
                <td>{{name}}</td>
                <td>{{username}}</td>
                <td>{{password}}</td>
                <td>{{email}}</td>
                <td>{{phone}}</td>
                <td>{{position}}</td>
                <td>{{createddate}}</td>
                <td>
                    <a role="button" href="/admin/edituser/{{this.id}}" style="width: 100px;" class="btn btn-success">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>