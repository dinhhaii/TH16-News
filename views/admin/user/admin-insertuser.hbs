<div class="vizew-login-area section-padding-80">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                <div class="login-content">
                    <!-- Section Title -->
                    <div class="section-heading">
                        <h4>Thêm người dùng</h4>
                        <div class="line"></div>
                    </div>

                    <form method="post">
                        <div class="form-group">
                            <p><b>Tên người dùng</b></p>
                            <input type="text" class="form-control" name="name">
                        </div>

                        <div class="form-group">
                            <p><b>Tài khoản người dùng</b></p>
                            <input type="text" class="form-control" name="username">
                        </div>

                        <div class="form-group">
                            <p><b>Mật khẩu người dùng</b></p>
                            <input type="password" class="form-control" name="password">
                        </div>
                         <div class="form-group">
                                    <p><b>Giới tính</b></p>
                                    <input type="radio"  name="gender" checked="checked"  value="Nam" id="radiobtnNam"></input>
                                    <label for="radiobtnNam"   style="color:gray">Nam </label>
                                    <input type="radio" name="gender"  value="Nữ" id="radiobtnNu"></input>
                                    <label for="radiobtnNu" style="color:gray">Nữ </label>
                         </div>                        
                               
                        <div class="form-group">
                            <p><b>Email người dùng</b></p>
                            <input type="text" class="form-control" name="email">
                        </div>

                        <div class="form-group">
                            <p><b>Số điện thoại người dùng</b></p>
                            <input type="text" class="form-control" name="phone">
                        </div>

                        <div class="form-group">
                            <p><b>Vị trí người dùng</b></p>
                            <select name="position" class="form-control">
                                <option value="subcriber">Subcriber</option>
                                <option value="editor">Editor</option>
                                <option value="writer">Writer</option>
                            </select>>
                        </div>
                        
                        
                        <button type="submit" class="btn vizew-btn w-100 mt-30">Lưu lại</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>