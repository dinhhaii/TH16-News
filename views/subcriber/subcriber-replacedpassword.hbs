<link rel="stylesheet" type="text/css"
        href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />

<div class="tab-content container">
    <div class="tab-pane fade show active" id="DangKiThanhVienVip" role="tabpanel" aria-labelledby="tab-css">
        <!-- ##### Breadcrumb Area Start ##### -->
        <div class="vizew-breadcrumb">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#"><i class="fa fa-home" aria-hidden="true"></i>
                                        Trang
                                        chủ</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Thay đổi mật khẩu</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ##### Breadcrumb Area End ##### -->

        <!-- ##### Login Area Start ##### -->
        <div class="vizew-login-area section-padding-80">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-6">
                        <div class="login-content">
                            <!-- Section Title -->
                            <div class="section-heading">
                                <h4>Thay đổi mật khẩu</h4>
                                <div class="line"></div>
                            </div>

                            <form action="/subcriber/replacedpassword" method="post">
                                <div class="form-group">
                                    <p><b>Nhập mật khẩu mới</b></p>
                                    <input type="password" class="form-control" name="replacedpassword">
                                </div>

                                <div class="form-group">
                                    <p><b>Nhập lại mật khẩu mới</b></p>
                                    <input type="password" class="form-control" name="confirmpassword">
                                </div>

                                <button type="submit" class="btn vizew-btn w-100 mt-30">Cập nhật</button>
                                <br>
                                <br> 

                                {{#if isErrorFinish}}
                                    <div class="alert alert-danger">
                                        
                                        <div class="container">
                                            <div class="alert-icon">
                                                <i class="material-icons">warning</i>
                                                <p>Bạn vui lòng nhập thông tin để tiến hành thay đổi mật khẩu
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true"><i class="material-icons">clear</i></span>
                                                    </button>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                {{/if}}

                                {{#if isErrorConfirmpassword}}
                                    <div class="alert alert-danger">
                                        <div class="container">
                                            <div class="alert-icon">
                                                <i class="material-icons">warning</i>
                                                <p>Mật khẩu và nhập lại không khớp, bạn vui lòng kiểm tra và nhập lại
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true"><i class="material-icons">clear</i></span>
                                                    </button>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                {{/if}}
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>