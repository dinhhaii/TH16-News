<div class="vizew-login-area section-padding-80">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                <div class="login-content">
                    <!-- Section Title -->
                    <div class="section-heading">
                        <h4>Đăng kí thành viên</h4>
                        <div class="line"></div>
                    </div>

                    <form action="index.html" method="post">
                        <div class="form-group">
                            <p><b>Họ và tên</b></p>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Nguyễn Văn A">
                        </div>
                        <div class="form-group">
                            <p><b>Giới tính</b></p>
                            <input type="radio" name="gender" value="Nam" id="radiobtnNam"></input>
                            <label for="radiobtnNam" style="color:gray">Nam </label>
                            <input type="radio" name="gender" value="Nữ" id="radiobtnNu"></input>
                            <label for="radiobtnNu" style="color:gray">Nữ </label>
                        </div>
                        <div class="form-group">
                            <p><b>Ngày sinh</b></p>
                            <input type="date" class="form-control">
                        </div>
                        <div class="form-group">
                            <p><b>Email</b></p>
                            <input type="email" class="form-control" id="exampleInputEmail1"
                                placeholder="nvana@vizew.com">
                        </div>

                        <div class="form-group">
                            <p><b>Mật khẩu</b></p>
                            <input type="password" class="form-control" id="exampleInputPassword1">
                        </div>
                        <div class="form-group">
                            <p><b>Nhập lại mật khẩu</b></p>
                            <input type="password" class="form-control" id="exampleInputPassword1">
                        </div>
                        <button type="submit" class="btn vizew-btn w-100 mt-30">Đăng kí</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>