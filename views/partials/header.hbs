<!-- Top Header Area -->
        <div class="top-header-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12 col-md-6">
                        <!-- Breaking News Widget -->
                        <div class="breaking-news-area d-flex align-items-center">
                            <div class="news-title" style="width:250px;">
                                <p>Có thể bạn chưa biết:</p>
                            </div>
                            <div id="breakingNewsTicker" class="ticker">
                                <ul>
                                    <li><a href="#">iPhone không cần cảm biến vân tay</a></li>
                                    <li><a href="#">Giá xăng tăng kỉ lục</a></li>
                                    <li><a href="#">Phương pháp đột phá, đẩy lùi "ung thử tử thần"</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="top-meta-data d-flex align-items-center justify-content-end">
                            <!-- Top Social Info -->
                            <div class="top-social-info">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="https://instagram.com/dinhhai.js"><i class="fa fa-instagram"></i></a>
                            </div>
                            <!-- Top Search Area -->
                            <div class="top-search-area">
                                <form action="#" method="post">
                                    <input type="search" name="top-search" id="topSearch" placeholder="Search">
                                    <button type="submit" class="btn"><i class="fa fa-search"
                                            aria-hidden="true"></i></button>
                                </form>
                            </div>
                            <!-- Login -->
                            
                            {{#if isLogin}}
                                {{#if isSubcriber}}
                            <a href="/user/subcriber-editprofile" style="color: gray; align-content: center;"> {{Username}}</a>
                                {{else}}
                                {{#if isEditor}}
                                <a href="/editor/editor-editprofile" style="color: gray; align-content: center;"> {{Username}}</a>
                                {{else}}
                                {{#if isWriter}}
                                <a href="/writer/writer-editprofile" style="color: gray; align-content: center;"> {{Username}}</a>
                                {{else}}
                                <a href="#" style="color: gray; align-content: center;"> {{Username}}</a>
                                {{/if}}
                                {{/if}}
                                {{/if}}
                            <form method="POST" action="/logout" id="myform">
                                <a class="login-btn" role="button" onclick="document.getElementById('myform').submit()" style="color: white">
                                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                                </a>
                            </form>
                            {{else}}
                            <a href="/login" style="color: gray; align-content: center;"> Đăng nhập</a>
                            <a href="/login" class="login-btn"><i class="fa fa-user" aria-hidden="true"></i></a>
                            {{/if}}

                        </div>
                    </div>
                </div>
            </div>
        </div>