<div class="row">
    <div class="col-12">
        <!-- =================Top 10 trending================= -->
        <div class="section-heading">
            <h4>Top 10 bài viết được xem nhiều nhất</h4>
            <div class="line"></div>
        </div>
    </div>
</div>
<div class="row no-gutters">
    <div class="col-12 col-md-7 col-lg-8">
        <div class="tab-content">
                        
            <!--  Post Content -->
            <div class="tab-pane fade show active" id="post-{{firsttrendingpost.id}}" role="tabpanel" aria-labelledby="post-{{firsttrendingpost.id}}-tab">
                <div class="single-news-post news-post bg-img" style="background-image: url({{firsttrendingpost.image}});">
                    <div class="post-content">
                        <a href="/category/{{firsttrendingpost.idcategory}}/posts" class="post-cata">#######</a>
                        <a href="/post/{{firsttrendingpost.id}}" class="post-title">{{firsttrendingpost.titlepost}}</a>
                        <div class="post-meta d-flex">
                            <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> 32</a>
                            <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> {{firsttrendingpost.views}}</a>
                            <a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 203</a>
                        </div>
                    </div>
                    <!-- Ngày đăng -->
                    <span class="news-duration">{{firsttrendingpost.createddate}}</span>
                </div>
            </div>

            {{#each trendingposts}}
            <div class="tab-pane fade " id="post-{{id}}" role="tabpanel" aria-labelledby="post-{{id}}-tab">
                <!-- Single Feature Post -->
                <div class="single-news-post news-post bg-img" style="background-image: url({{image}});">
                    <!-- Post Content 1-->
                    <div class="post-content">
                        <a href="/category/{{idcategory}}/posts" class="post-cata">######</a>
                        <a href="/post/{{id}}" class="post-title">{{titlepost}}</a>
                        <div class="post-meta d-flex">
                            <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> 30</a>
                            <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> {{views}}</a>
                            <a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 120</a>
                        </div>
                    </div>
                    <!-- Ngày đăng -->
                    <span class="news-duration">{{createddate}}</span>
                </div>
            </div>
            {{/each}}
   
        </div>
    </div>


    <!-- --------------- Single Blog Post --------------- -->
    <div class="col-12 col-md-5 col-lg-4">
        <ul class="nav vizew-nav-tab" role="tablist">

            <li class="nav-item">
                <a class="nav-link " id="post-{{firsttrendingpost.id}}-tab" data-toggle="pill" href="#post-{{firsttrendingpost.id}}" role="tab"
                    aria-controls="post-{{firsttrendingpost.id}}" aria-selected="true">
                    <!-- Single Blog Post -->
                    <div class="single-blog-post style-2 d-flex align-items-center">
                        <div class="post-thumbnail">
                            <img src="{{firsttrendingpost.image}}" alt="">
                        </div>
                        <div class="post-content">
                            <h6 class="post-title">{{firsttrendingpost.titlepost}}
                            </h6>
                            <div class="post-meta d-flex justify-content-between">
                                <span><i class="fa fa-comments-o" aria-hidden="true"></i> 32</span>
                                <span><i class="fa fa-eye" aria-hidden="true"></i> {{firsttrendingpost.views}}</span>
                                <span><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 203</span>
                            </div>
                        </div>
                        <!-- Ngày đăng -->
                        <span class="news-duration">{{firsttrendingpost.createddate}}</span>
                    </div>
                </a>
            </li>
            {{#each trendingposts}}
            <li class="nav-item">
                <a class="nav-link" id="post-{{id}}-tab" data-toggle="pill" href="#post-{{id}}" role="tab" aria-controls="post-2"
                    aria-selected="false">
                    <!-- ung thư -->
                    <div class="single-blog-post style-2 d-flex align-items-center">
                        <div class="post-thumbnail">
                            <img src="{{image}}" alt="">
                        </div>
                        <div class="post-content">
                            <h6 class="post-title">{{titlepost}}</h6>
                            <div class="post-meta d-flex justify-content-between">
                                <span><i class="fa fa-comments-o" aria-hidden="true"></i> 30</span>
                                <span><i class="fa fa-eye" aria-hidden="true"></i> {{views}}</span>
                                <span><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 120</span>
                            </div>
                        </div>
                        <!-- Ngày đăng -->
                        <span class="news-duration">{{createddate}}</span>
                    </div>
                </a>
            </li>
            {{/each}}

            
    </div>
</div>